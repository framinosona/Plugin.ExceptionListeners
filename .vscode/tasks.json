{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Documentation",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "Plugin.ExceptionListeners.Docs/api", "Plugin.ExceptionListeners.Docs/site"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "detail": "Delete existing API and site documentation folders"
    },
    {
      "label": "Generate API Metadata",
      "type": "shell",
      "command": "dotnet",
      "args": ["docfx", "metadata", "Plugin.ExceptionListeners.Docs/docfx.json", "--output", "Plugin.ExceptionListeners.Docs/api"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": "Clean Documentation",
      "detail": "Generate DocFX API metadata"
    },
    {
      "label": "Build Documentation Site",
      "type": "shell",
      "command": "dotnet",
      "args": ["docfx", "build", "Plugin.ExceptionListeners.Docs/docfx.json", "--output", "Plugin.ExceptionListeners.Docs/site"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": "Generate API Metadata",
      "detail": "Build DocFX documentation site"
    },
    {
      "label": "Regenerate Documentation",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Clean Documentation",
        "Generate API Metadata",
        "Build Documentation Site"
      ],
      "group": "build",
      "detail": "Complete documentation regeneration: clean, generate metadata, and build site"
    }
  ]
}
